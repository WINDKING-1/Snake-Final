{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build snake",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-ID:/Projects/Snake/SDL2/include",
                "-LD:/Projects/Snake/SDL2/lib",
                "-lSDL2main",
                "-lSDL2",
